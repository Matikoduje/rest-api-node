{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "linebreak-style": ["error", "windows"],
    "no-param-reassign": [2, { "props": false }],
    "no-underscore-dangle": ["error", {"allow": ["_id", "_doc"]}],
    "node/no-unpublished-require": "off",
    "global-require": "off"
  }
}
